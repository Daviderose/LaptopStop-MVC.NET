@model List<LaptopStop_MVC.Models.Laptop>

<h1>My Laptops</h1>

@if (Model.Count == 0)
{ 
    <p>No Laptops Have Been Added Yet </p>
}

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>

    
    @foreach (var laptop in Model)
    {
    <tr>
        <td>@laptop.Name</td>
        <td>@laptop.Description</td>
        <td><a asp-controller="Laptop" asp-action="Edit" asp-route-laptopId="@laptop.LaptopId">edit</a></td>
    </tr>   
    }

</table>

<p><a asp-controller="Laptop" asp-action="Add">Add Laptop</a></p>