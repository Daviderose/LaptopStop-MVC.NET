
<h1>Edit Laptop</h1>

<form method="post">

    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" id="name" value="@ViewBag.laptop.Name" type="text" />
    </div>
    <div class="form-group">
        <label for="name">Description</label>
        <input class="form-control" name="description" id="description" value="@ViewBag.laptop.Description" type="text" />
    </div>

    <input type="hidden" value="@ViewBag.laptop.ID" name="id" />

    <input type="submit" value="Edit Laptop" />

</form>
