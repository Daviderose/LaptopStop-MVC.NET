<h1>@ViewBag.title</h1>

<form method="post">

    @foreach (var laptop in ViewBag.laptops)
    { 
       <input type="checkbox" name="laptopIds" id="@laptop.LaptopId" value="@laptop.LaptopId" />
       <label for="@laptop.LaptopId">@laptop.Name</label>
       <br />
    }

    <input type="submit" value="Remove Selected Laptop(s)" />
</form>
